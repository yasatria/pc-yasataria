<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/buble"
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:src="@drawable/buble_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/pclogomenu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="88dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_palette1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/palette1"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="420dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_palette2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/palette7"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_palette3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/palette4"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_palette4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/palette6"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_palette5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/palette8"
        android:layout_marginRight="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_palette1"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginBottom="420dp"
        android:text="palette 1"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick your favourite palette"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="600dp"/>

    <TextView
        android:id="@+id/style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="style by pick color."
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="640dp"/>

    <TextView
        android:id="@+id/text_palette2"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:text="palette 2"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="220dp"/>

    <TextView
        android:id="@+id/text_palette3"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:text="palette 3"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/text_palette4"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:text="palette 4"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/text_palette5"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:text="palette 5"
        android:textColor="#998969FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/bt_palette1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_palette1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="420dp"
        android:layout_marginRight="30dp"
        android:text="use"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="handlePallete1"/>

    <Button
        android:id="@+id/bt_palette2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_palette1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="30dp"
        android:text="use"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="handlePallete2"/>

    <Button
        android:id="@+id/bt_palette3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_palette1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:text="use"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="handlePallete3"/>

