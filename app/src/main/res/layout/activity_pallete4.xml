<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_palette"
    tools:context=".Pallete4Activity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/pclogomenu"
        android:layout_marginBottom="540dp"
        android:layout_marginLeft="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/warna1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f73f52"
        android:textSize="10dp"
        android:text="Bright red"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/warna2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffea85"
        android:textSize="10dp"
        android:text="Very light yellow"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/warna3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f6f6f6"
        android:textSize="10dp"
        android:text="Very light gray (mostly white)"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/warna4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7986c7"
        android:textSize="10dp"
        android:text="Slightly desaturated blue"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palette 4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>